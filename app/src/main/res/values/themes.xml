<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="colorAccent">@color/color_accent</item>
        <item name="colorAntiAccent">@color/color_accent_night</item>

        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorDivider">@color/color_divider_dark</item>

        <item name="colorItemBackground">@color/color_item_background</item>
        <item name="colorOnlineIndicator">@color/color_green</item>
        <item name="colorItemTextTitle">@color/color_item_title</item>
        <item name="colorItemTextMessage">@color/color_item_message</item>
        <item name="colorCounterBackground">@color/color_indicator</item>
        <item name="colorDoneIcon">@color/color_primary</item>
        <item name="colorAppBar">@color/color_primary</item>
        <item name="colorItemBackside">@color/color_primary_dark</item>
        <item name="colorItemSelectedBackground">@color/color_gray</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransition</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>